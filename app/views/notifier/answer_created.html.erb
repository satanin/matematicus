<div class="mailer-title">
  <h3><%= t(:body_header, scope: [:notifier, :answer_created], user_name: @user_answering.username.capitalize) %></h3>
</div>
<div class="mailer-body">
  <%= simple_format t(:body, scope: [:notifier,:answer_created], user_name: @user.username, user_answering: @user_answering.username, link:link_to(t(:question_link, scope: [:notifier, :answer_created]), question_url(@question.id)), page_link: link_to(t(:page, scope: [:notifier, :answer_created]), "#{ENV['STATIC_CONTENT_BASE_URL']}")) %>
</div>
<div class="mailer-footer">
  <%= t(:disable, scope: :notifications, link: link_to(t(:link_text, scope: :notifications), "#{ENV['STATIC_CONTENT_BASE_URL']}/unsubscribe?email=#{@encrypted_email}")).html_safe %>
</div>