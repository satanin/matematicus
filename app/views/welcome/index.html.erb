<div class="row">
  <div class="large-12 columns">
    <div class="panel">
      <h1>matematic.us</h1>
    </div>
  </div>
</div>

<div class="row">
  <div class="large-9 columns">
  <%= render partial: 'question', collection: @questions %>
  </div>

  <aside class="large-3 columns hide-for-small">
    <div class="top-lists-data">
    <div>
        <h5 style="text-align: center;"><%= t(:most_viewed_questions) %></h5>
    </div>
      <ul class="no-bullet">
        <%= render partial: 'most_viewed_question', collection: @most_viewed_questions %>
      </ul>
    </div>
    <div class="top-lists-data">
    <div>
        <h5 style="text-align: center;"><%= t(:most_voted_answers) %></h5>
    </div>
      <ul class="no-bullet">
        <%= render partial: 'most_voted_answer', collection: @most_voted_answers %>
      </ul>
    </div>
  </aside>

</div>
